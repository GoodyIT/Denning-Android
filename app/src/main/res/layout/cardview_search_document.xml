<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/search_document_cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/search_document_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="18dp"
                    android:text="Title"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/search_document_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/search_document_title"
                    android:layout_alignStart="@+id/search_document_title"
                    android:layout_below="@+id/search_document_title"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Header" />

                <TextView
                    android:id="@+id/search_document_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/search_document_openMatterBtn"
                    android:layout_alignLeft="@+id/search_document_header"
                    android:layout_alignStart="@+id/search_document_header"
                    android:layout_below="@+id/search_document_header"
                    android:text="Description" />

                <Button
                    android:id="@+id/search_document_openMatterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@android:color/holo_red_dark"
                    android:padding="8dp"
                    android:text="Related Matter"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/search_document_openfolderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/search_document_title"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/search_document_title"
                    android:background="@android:color/holo_red_dark"
                    android:padding="8dp"
                    android:text="Open Folder"
                    android:textColor="@android:color/white" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
