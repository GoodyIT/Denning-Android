<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:floatview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container"
    android:weightSum="1"
    android:id="@+id/add_detail_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/add_cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <it.denning.search.utils.myfloatingedittext.MyFloatingEditText
                            android:id="@+id/left_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/add_detail_btn"
                            android:background="@drawable/md_transparent"
                            app:met_clearButton="true"
                            android:layout_marginLeft="12dp"
                            android:textSize="15sp"
                            app:met_primaryColor="?colorAccent"
                            app:met_floatingLabel="highlight"
                            app:met_hideUnderline="true"
                            app:met_floatingLabelTextColor="@color/red" />
                        <ImageButton
                            android:id="@+id/add_detail_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            card_view:srcCompat="@mipmap/ic_detail_gray"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/gray">

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <it.denning.search.utils.myfloatingedittext.MyFloatingEditText
                            android:id="@+id/right_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/add_detail_right_btn"
                            android:background="@drawable/md_transparent"
                            app:met_clearButton="true"
                            android:layout_marginLeft="12dp"
                            android:textSize="15sp"
                            app:met_primaryColor="?colorAccent"
                            app:met_floatingLabel="highlight"
                            app:met_hideUnderline="true"
                            app:met_floatingLabelTextColor="@color/red" />
                        <ImageButton
                            android:id="@+id/add_detail_right_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            card_view:srcCompat="@mipmap/ic_detail_gray"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
